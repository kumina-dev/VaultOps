{
  "expo": {
    "name": "VaultOps",
    "slug": "vaultops",
    "owner": "thekumina",
    "version": "1.0.0",
    "platforms": ["android"],
    "githubUrl": "https://github.com/kumina-dev/VaultOps",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "icon": "./assets/icon-1024.png",
    "plugins": [
      [
        "expo-sqlite",
        {
          "useSQLCipher": true
        }
      ],
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true,
          "faceIDPermission": "Allow VaultOps to use Face ID to unlock your vault."
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash-2048.png",
      "resizeMode": "contain",
      "backgroundColor": "#05060A"
    },
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thekumina.vaultops"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-foreground.png",
        "backgroundImage": "./assets/adaptive-background.png",
        "backgroundColor": "#05060A"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.thekumina.vaultops"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
